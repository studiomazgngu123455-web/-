async function loadCloudData() {
    try {
        const response = await fetch('https://raw.githubusercontent.com/username/repo/main/data.json');
        const cloudData = await response.json();
        
        // مقارنة مع البيانات المحلية
        const localData = localStorage.getItem(APP_DATA_KEY);
        
        if (!localData || cloudData.timestamp > JSON.parse(localData).timestamp) {
            if (confirm('توجد بيانات أحدث في السحابة. هل تريد التحديث؟')) {
                localStorage.setItem(APP_DATA_KEY, JSON.stringify(cloudData));
                location.reload();
            }
        }
    } catch (error) {
        console.log('لا اتصال بالإنترنت أو خطأ في السحابة');
    }
}

// استدعاء عند التحميل
document.addEventListener('DOMContentLoaded', function() {
    loadCloudData();
});
